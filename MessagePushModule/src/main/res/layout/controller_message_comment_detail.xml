<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="java.lang.Boolean" />

        <import type="android.view.View" />

        <import type="com.sire.corelibrary.Utils.TimeConverterUtils" />

        <variable
            name="commentItem"
            type="com.sire.messagepushmodule.Pojo.CommentMessage" />


    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:fitsSystemWindows="true"
            android:minHeight="?attr/actionBarSize"
            app:navigationIcon="@drawable/svg_back_arrow"
            app:title="@string/message_detail"
            app:titleTextColor="@android:color/white">

        </android.support.v7.widget.Toolbar>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/cl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/selectableItemBackground"
            android:onClick="onCommentItemClick"
            android:paddingBottom="20dp"
            android:paddingStart="20dp">

            <View
                android:id="@+id/comment_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/shape_line_6"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintRight_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"></View>

            <ImageView
                android:id="@+id/iv_user_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:cirlce="@{true}"
                android:imageUrl="@{commentItem.fromAuthorImg}"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/comment_line" />

            <TextView
                android:id="@+id/tv_user"

                style="@style/body1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="17dp"
                android:text="@{commentItem.fromAuthorName}"
                app:layout_constraintLeft_toRightOf="@id/iv_user_icon"
                app:layout_constraintTop_toTopOf="@id/comment_line"
                tool:text="Sire" />


            <TextView
                android:id="@+id/tv_address_time"
                style="@style/caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:text='@{commentItem.publishAddress+" | "+TimeConverterUtils.date2SimpleDescription(commentItem.timeLine)}'
                app:layout_constraintLeft_toRightOf="@id/iv_user_icon"
                app:layout_constraintTop_toBottomOf="@id/tv_user" />


            <TextView
                android:id="@+id/tv_comment"
                style="@style/body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:paddingEnd="25dp"
                android:text='@{commentItem.questionComment!=null?"回复@"+commentItem.questionComment.fromAuthorName+": "+commentItem.content:commentItem.content}'
                app:layout_constraintLeft_toRightOf="@id/iv_user_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_address_time"
                tool:text="程序员创业靠不靠谱" />

            <TextView
                android:id="@+id/tv_question_comment"
                style="@style/body1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_marginStart="14dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bubble"
                android:gravity="left|center_vertical"
                android:text='@{commentItem.questionComment.fromAuthorName+": "+commentItem.questionComment.content}'
                android:visibility="@{commentItem.questionComment!=null?View.VISIBLE:View.GONE}"
                app:layout_constraintLeft_toRightOf="@id/iv_user_icon"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_comment"
                tool:text="程序员创业靠不靠谱法撒旦飞洒飞洒发程序员创业靠不靠谱法撒旦飞洒飞洒发程序员创业靠不靠谱法撒旦飞洒飞洒发程序员创业靠不靠谱法撒旦飞洒飞洒发程序员创业靠不靠谱法撒旦飞洒飞洒发程序员创业靠不靠谱法撒旦飞洒飞洒发" />
            <TextView
                android:id="@+id/tv_post"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/body1_2"
                android:layout_marginTop="10dp"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_question_comment"
                android:text="查看帖子"/>
        </android.support.constraint.ConstraintLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/shape_1_line"

        android:layout_weight="1"></View>
    </LinearLayout>

</layout>