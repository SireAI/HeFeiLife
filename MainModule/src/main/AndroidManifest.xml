<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sire.hefeilife" >

    <application
        android:name=".Global.SireApp"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >


        <activity
            android:exported="true"
            android:name=".Controller.MainController"
            android:theme="@style/ActivityTheme"
            >

        </activity>
        <activity android:name=".Controller.SplashController" android:theme="@style/ActivityFullScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter >
                <action android:name="com.sire.notifycation.entrance" />
                <category android:name="android.intent.category.DEFAULT" />

            </intent-filter>
        </activity>

    </application>

</manifest>